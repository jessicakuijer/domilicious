{% extends 'base.html.twig' %}

{% block title %}Chef{% endblock %}

{% block body %}
    <h1>Chef</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chef.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ chef.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ chef.prenom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/images/chefs/')}}{{ chef.image }}" class="image-chef">
                </td>
            </tr>
            <tr>
                <th>Presentation</th>
                <td>{{ chef.presentation }}</td>
            </tr>
            <tr>
                <th>Type_de_cuisine</th>
                <td>{{ chef.typeCuisine.title }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('chef_index') }}">back to list</a>

    <!-- <a href="{{ path('chef_edit', {'id': chef.id}) }}">edit</a> -->

    <!-- {{ include('chef/_delete_form.html.twig') }} -->
{% endblock %}

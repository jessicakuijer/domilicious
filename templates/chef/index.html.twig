{% extends 'base.html.twig' %}

{% block title %}Les chefs - Domi'Licious{% endblock %}

{% block body %}
    <!-- <h1>Chef index</h1> -->

    <!-- TEST MISE EN PAGE-->

     <section class="box-content box-3" id="staff">
        <div class="container">
            {% for chef in chefs %}
            <div class="row heading">
                <div class="col-lg-12">
                    <h2>Cuisine : {{ chef.typeCuisine.title }}</h2>

                </div>
                <div class="row center">
                    <div class="col-md-6">
                        <div class="wrap-img">
                            <img src="{{ asset('uploads/images/chefs/') }}{{ chef.image }}" class="image-chef">
                        </div>
                           <button class="btn btn-secondary"><a href="{{ path('menu_index') }}">Liste des menus</a></button>
                                                       
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <h3>Chef {{ chef.prenom }} {{ chef.nom }}</h3>
                            <p>{{ chef.presentation }}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}